#include <stdio.h>
#include <stdlib.h>

int main(void) {

  int x;
	int multy=1;
	printf("Enter an integer number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d",&x);

	if(x<0)
		printf("Error!!! Factorial of a negative number doesn't exist. ");
	else if(x>0)
	{
		for(int y=1;y<=x;y++)
		{
			multy=multy*y;
		}

		printf("Factorial = %d",multy);
	}
